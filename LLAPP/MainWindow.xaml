<Window x:Class="LLAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leerlingentool" Height="450" Width="800">
    <Grid Margin="10">
        <TextBox x:Name="SearchBox" Width="300" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Button Content="Zoek" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="310,0,0,0" Click="ZoekButton_Click"/>
        <Button Content="Leerling Toevoegen" Width="150" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="420,0,0,0" Click="ToevoegenButton_Click"/>
        <Image x:Name="LeerlingFoto" Width="200" Height="200" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,50,0,0" Stretch="UniformToFill"/>
    </Grid>
</Window>